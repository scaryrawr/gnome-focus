{
  "name": "focus",
  "version": "1.3.0",
  "description": "Make inactive windows transparent",
  "scripts": {
    "bb": "beachball change",
	"bb:bump": "beachball bump",
    "bb:check": "beachball check",
    "types:clean": "[ -d ./@types] && rm -r ./types",
    "build:meta": "node generate-metadata.js",
    "build:types": "ts-for-gir generate",
    "build:clean": "[ -d ./dist ] && rm -r ./dist",
    "build": "npm run build:clean && mkdir dist && rollup -c && npm run build:meta",
    "build:package": "npm run build && cd ./dist && zip -r ../focus@scaryrawr.github.io.zip . && cd ..",
    "package:install": "npm run build:package && unzip focus@scaryrawr.github.io.zip -d ~/.local/share/gnome-shell/extensions/focus@scaryrawr.github.io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scaryrawr/gnome-focus.git"
  },
  "keywords": [
    "gjs",
    "gnome",
    "shell",
    "extension",
    "focus"
  ],
  "author": "Mike Wallio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scaryrawr/gnome-focus/issues"
  },
  "homepage": "https://github.com/scaryrawr/gnome-focus#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "beachball": "^1.52.0",
    "eslint": "^7.20.0",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-copy": "^3.4.0",
    "ts-for-gir": "^1.0.1",
    "typescript": "^4.1.5"
  }
}
